@page "/"

@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<!DOCTYPE html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Travel Mate</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="icon" href="https://cdn.example.com/path/to/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	<style>

		body {
			background-color: lightgray
		}

		.hero {
			background-image: url('https://example.com/path/to/your/hero-image.jpg');
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat;
			min-height: 80vh;
			color: #fff;
			display: flex;
			align-items: center;
			justify-content: center;
			text-align: center;
		}

			.hero h1 {
				font-size: 4rem;
				font-weight: bold;
				margin-bottom: 1rem;
			}

			.hero p {
				font-size: 1.5rem;
				margin-bottom: 2rem;
			}

		.btn-primary {
			background-color: #007bff;
			border-color: #007bff;
			transition: background-color 0.3s ease;
		}

			.btn-primary:hover {
				background-color: #0056b3;
				border-color: #004a99;
			}

		.featured-services {
			padding: 4rem 0;
		}

			.featured-services h2 {
				font-size: 2.5rem;
				font-weight: bold;
				margin-bottom: 2rem;
			}

			.featured-services .card {
				border: none;
				box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
				transition: transform 0.3s ease;
			}

				.featured-services .card:hover {
					transform: translateY(-0.25rem);
				}

			.featured-services .card-title {
				font-size: 1.5rem;
				font-weight: bold;
			}

			.featured-services .card-text {
				font-size: 1.1rem;
			}

		.carousel-item img {
			width: 100%;
			height: auto;
			max-height: 500px;
			object-fit: cover;
		}
		.h2text{
			font-family:cursive;
			text-align:center;
		}
	</style>
</head>
<body>
	<h2 class="h2text">A One stop site for all your needs.</h2>
	<div class="container-fluid background-image">
		<!-- Carousel Section -->
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100,rounded-circle" src="./OIP1.jpg" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="./OIP.jpg" alt="Second slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="./OIP3.jpg" alt="Third slide">
				</div>
			</div>
			<a class="carousel-control-prev" data-target="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" data-target="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
		<!-- Featured Services Section -->
		<section class="featured-services">
			<div class="container">
				<h2 class="text-center">Featured Services</h2>
				<div class="row">
					<div class="col-md-4">
						<div class="card text-center">
							<div class="card-body">
								<i class="fas fa-hotel fa-3x mb-3"></i>
								<h5 class="card-title">Hotels</h5>
								<p class="card-text">Find and book hotels that match your preferences.</p>
								<a href="#" class="btn btn-primary">Search Hotels</a>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card text-center">
							<div class="card-body">
								<i class="fas fa-taxi fa-3x mb-3"></i>
								<h5 class="card-title">Cabs</h5>
								<p class="card-text">Reserve cabs for easy transportation during your trip.</p>
								<a href="#" class="btn btn-primary">Book Cabs</a>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card text-center">
							<div class="card-body">
								<i class="fas fa-user fa-3x mb-3"></i>
								<h5 class="card-title">Register Hotels & Cabs</h5>
								<p class="card-text">Add Your Hotel details & Cab details for Registration</p>
								<a href="/RegisterAgent" class="btn btn-primary">Register</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</body>


@code {

	private void Register()

	{
		NavigationManager.NavigateTo("/Registration");
	}

	private void Login()

	{
		NavigationManager.NavigateTo("/login");
	}

}
