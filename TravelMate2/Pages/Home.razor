 @page "/home"
 @inherits LayoutComponentBase
 @inject NavigationManager NavigationManager

<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Mate</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="icon" href="https://cdn.example.com/path/to/favicon.ico" type="image/x-icon">
    <style>
        .background-image {
            background-image: url('https://example.com/path/to/your/background-image.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #fff;
        }

        p {
            color: black;
        }

        .carousel-item img {
            width: 100%;
            height: auto; /* Adjust to maintain aspect ratio */
        }
    </style>
</head>
<body>
    <div class="container-fluid background-image">
        <!-- Header Section -->
        <div class="header bg-light py-3 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <div>
                    <a href="/"><img src="logo.png" alt="Travel Mate" class="img-fluid" style="max-height: 50px;" /></a>
                </div>
                <a class="navbar-brand" href="/">
                    <i class="fas fa-plane-departure"></i> Travel Mate
                </a>
                <!-- Navigation Menu -->
                <nav class="nav">
                    <a class="nav-link" href="#">Hotels</a>
                    <a class="nav-link" href="#">Cabs</a>
                    <a class="nav-link" href="#">Deals</a>
                    <a class="nav-link" href="#">My Bookings</a>
                </nav>
                <!-- User Profile / Account Section -->
                <div class="d-flex align-items-center">
                    <a href="/login" @onclick="@(()=>Login())" class="btn btn-outline-primary mr-2">Login</a>
                    <a href="/Register" @onclick="@(()=>Register())" class="btn btn-primary">Create Account</a>
                    <div class="dropdown ml-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="languageCurrencyDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            IN | ENG | INR
                        </button>
                        <div class="dropdown-menu" aria-labelledby="languageCurrencyDropdown">
                            <a class="dropdown-item" href="#">Change Language</a>
                            <a class="dropdown-item" href="#">Change Currency</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carousel Section -->
        <div id="carouselExampleIndicators" class="carousel slide my-5" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/1920x600?text=Slide+1" alt="Slide 1">
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1920x600?text=Slide+2" alt="Slide 2">
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1920x600?text=Slide+3" alt="Slide 3">
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1920x600?text=Slide+4" alt="Slide 4">
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1920x600?text=Slide+5" alt="Slide 5">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
        <!-- Featured Services Section -->
        <div class="container my-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title" style="color:black">Hotels</h5>
                            <p class="card-text">Find and book hotels that match your preferences.</p>
                            <a href="#" class="btn btn-primary">Search Hotels</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title" style="color:black">Cabs</h5>
                            <p class="card-text">Reserve cabs for easy transportation during your trip.</p>
                            <a href="#" class="btn btn-primary">Book Cabs</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<footer class="footer mt-auto py-3 bg-dark text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center text-md-left">
                <h5>Travel Mate</h5>

                <p> Your reliable partner for all your travel needs. Book flights, hotels, and cabs with ease.</p>
            </div>
            <div class="col-md-4 text-center">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">About Us</a></li>
                    <li><a href="#" class="text-white">Contact Us</a></li>
                    <li><a href="#" class="text-white">Privacy Policy</a></li>
                    <li><a href="#" class="text-white">Terms of Service</a></li>
                </ul>
            </div>
            <div class="col-md-4 text-center text-md-right">
                <h5>Follow Us</h5>
                <a href="#" class="text-white"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <span>© 2024 Travel Mate - All Rights Reserved</span>
            </div>
        </div>
    </div>
</footer>


@code {
    private void Register()
    {
        NavigationManager.NavigateTo("/Register");
    }
    private void Login()
    {
        NavigationManager.NavigateTo("/login");
    }
}
